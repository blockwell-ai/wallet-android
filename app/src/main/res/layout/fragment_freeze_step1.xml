<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/buttons"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/StepTextStyle"
                android:layout_marginTop="32dp"
                android:text="You can prevent an individual wallet from moving tokens by freezing that wallet." />

            <TextView
                style="@style/StepTextStyle"
                android:layout_marginTop="16dp"
                android:text="When frozen, that wallet cannot send or receive your tokens through any means until they are unfrozen." />

            <TextView
                style="@style/StepTextStyle"
                android:layout_marginTop="16dp"
                android:text="This Guide walks you through both freezing and unfreezing a wallet. Click Next to continue." />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>
    </ScrollView>

    <ai.blockwell.qrdemo.trainer.BackNextView
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>