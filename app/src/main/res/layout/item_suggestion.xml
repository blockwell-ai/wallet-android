<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="10dp"
    android:paddingRight="16dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Suggestion #1" />

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tagView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/bg_tag"
                android:textColor="@color/primaryText"
                android:textSize="14sp"
                android:visibility="gone"
                tools:text="IDEA" />
        </FrameLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/votes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textColor="@color/colorTextEmphasis"
            android:textSize="18sp"
            tools:text="4" />

        <TextView
            android:id="@+id/votes_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/votes" />
    </LinearLayout>

    <TextView
        android:id="@+id/proposal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/proposal"
        android:textColor="@color/proposal"
        android:textSize="16sp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorTextEmphasis"
        android:textSize="18sp"
        android:ellipsize="end"
        android:maxLines="4"
        tools:text="Create More Suggestions Create More SuggestionsCreate More SuggestionsCreate More SuggestionsCreate More SuggestionsCreate More SuggestionsCreate More SuggestionsCreate More SuggestionsCreate More SuggestionsCreate More SuggestionsCreate More SuggestionsCreate More SuggestionsCreate More SuggestionsCreate More SuggestionsCreate More SuggestionsCreate More SuggestionsCreate More SuggestionsCreate More SuggestionsCreate More Suggestions" />

</LinearLayout>
